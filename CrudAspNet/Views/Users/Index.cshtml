@model IEnumerable<CrudAspNet.Models.User>

@{
    ViewBag.Title = "Registros";
}
<h2 class="mt-5">Registros</h2>

<table class="table table-striped table-hover table-dark table-bordered mt-4">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayName("CPF")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td class="text-center">
                <a class="btn btn-outline-light" href="@Url.Action("Edit","Users", new { id = item.UserId })">Alterar</a>
                <a class="btn btn-outline-light" href="@Url.Action("Details","Users", new { id = item.UserId })">Visualizar</a>
                <a class="btn btn-outline-light" href="@Url.Action("Delete","Users", new { id = item.UserId })">Apagar</a>
            </td>
        </tr>
    }

        <tr>
            <td colspan="4" class="text-center">

                <a class="btn btn-outline-light rounded-circle" href="/Users/Create">
                    <p class="m-1">+</p>
                </a>
            </td>
        </tr>

</table>